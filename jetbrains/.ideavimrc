"" -- Options --
set incsearch
set clipboard+=unnamed

" -- Plugins(https://jb.gg/ideavim-plugins) --
set NERDTree
set highlighted-yank
set vim-commentary
set easymotion


" -- Keymaps --
let mapleader=" "

" Action
map gcc <Action>(CommentByLineComment)
map <leader>/ <Action>(SearchEverywhere)
map <leader><leader> <Action>(GotoFile)
map <leader>fa <Action>(GotoAction)
map <leader>fu <Action>(RecentFiles)
map <leader>fc <Action>(GotoClass)
map <leader>fs <Action>(GotoSymbol)
"map <leader>ca <Action>(ShowIntentionActions)
map <leader>ca <Action>()
map <c-w>m <Action>(HideActiveWindow)
map gl <Action>(ShowErrorDescription)


" - Navigation -
" linux
nnoremap <a-h> <c-w>h
nnoremap <a-l> <c-w>l
nnoremap <a-k> <c-w>k
nnoremap <a-j> <c-w>j
nnoremap <a-w> :bd<cr>
nnoremap <s-l> :bn<cr>
nnoremap <s-h> :bp<cr>

" mac
nnoremap <d-h> <c-w>h
nnoremap <d-l> <c-w>l
nnoremap <d-k> <c-w>k
nnoremap <d-j> <c-w>j
nnoremap <d-w> :bd<cr>
