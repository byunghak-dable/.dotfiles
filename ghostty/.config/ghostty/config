
# Appearance
theme = catppuccin-mocha
background-blur-radius = 25
background-opacity = 0.9
window-save-state = always

# Font
font-size = 20
font-family = Agave Nerd Font

# Cursor
cursor-style = block
cursor-style-blink = false
shell-integration-features = no-cursor

# Keybind
## Split
keybind = cmd+shift+k=new_split:up
keybind = cmd+shift+j=new_split:down
keybind = cmd+shift+h=new_split:left
keybind = cmd+shift+l=new_split:right
keybind = unconsumed:ctrl+k=goto_split:top
keybind = unconsumed:ctrl+j=goto_split:bottom
keybind = unconsumed:ctrl+h=goto_split:left
keybind = unconsumed:ctrl+l=goto_split:right
keybind = cmd+k=goto_split:up
keybind = cmd+j=goto_split:down
keybind = cmd+h=goto_split:left
keybind = cmd+l=goto_split:right

## Tab
keybind = cmd+shift+n=new_tab
